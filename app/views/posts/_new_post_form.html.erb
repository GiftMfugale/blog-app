
<div class="standard-form">

    <% if @post.errors.any?%>
   <div class="form-errors">
    <h3><%= pluralize(@post.errors.count, 'error')%> prohibited  this form from  being saved:</h3>
    <ul>
        <% @post.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
         <% end %>
        </ul>
        </div>

        <% end %>


  <%= form_with(model: post, url: create_post_path , local: true) do |form|  %>

<div class="form-input-row"> 
<div class="form-label"><%=  form.label :title %></div>
<div class="form-text"><%= form.text_field :title %></div>
</div>


<div class="form-input-row">
<div class="form-label"><%= form.label :text %></div>
<div class="form-text"><%= form.text_area :text %></div>
</div>
<% if user.present? %>
<%= form.hidden_field :author_id, value: user.id%>
<% end %>

<div class="form-submit">
<%= form.submit %>
</div>
<% end %>


</div>